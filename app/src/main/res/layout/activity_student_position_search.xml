<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/facebook_color"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="it.polito.mad.polijob.company.CompanyStudentSearchActivity"
    android:gravity="center_vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/register"
                style="@style/bigtexheader_basics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Position"
                android:layout_gravity="center_horizontal"
                android:gravity="clip_horizontal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/typeofjob_spinner"
                    android:entries="@array/type_arrays"
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/typeofdegree_spinner"
                    android:entries="@array/required_career_arrays"
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/typeofcontract_spinner"
                    android:entries="@array/types_of_contract"
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Spinner
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:entries="@array/country_arrays"
                    android:id="@+id/country_spinner"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:hint="City" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/etxt_fromdate"
                    android:layout_width="match_parent"
                    style="@style/edittext_basics"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:hint="from" />
                <EditText
                    android:id="@+id/etxt_todate"
                    android:layout_width="match_parent"
                    style="@style/edittext_basics"

                    android:layout_weight="10"
                    android:gravity="center"
                    android:hint="to" />
                <EditText
                    android:id="@+id/freshness"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    style="@style/edittext_basics"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_weight="10"
                    android:hint="Days" />
            </LinearLayout>

            <Button
                style="@style/button_basics"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_color"
                android:text="Filter"
                android:id="@+id/filter_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
