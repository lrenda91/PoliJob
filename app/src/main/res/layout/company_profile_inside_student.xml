<ScrollView
    android:id="@+id/scroll"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/headerPosition"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerPosition"
            android:background="@android:color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/lineLogo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/headerPosition"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <TextView
                android:id="@+id/contactsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/contacts"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/descriptionLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contactsTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <LinearLayout
                android:id="@+id/contactsCompanyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/info"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/infoLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/infoTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <LinearLayout
                android:id="@+id/infoCompanyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/about_company"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/aboutLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/infoTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/missionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/mission"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/missionLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/missionTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <TextView
                android:id="@+id/mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fieldsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/fields_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/fieldsLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/missionTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/facebook_color" />

            <TextView
                android:id="@+id/fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>